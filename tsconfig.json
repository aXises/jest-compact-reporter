{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "alwaysStrict": true,
        "strict": true,
        "typeRoots": ["./@types", "./node_modules/@types"]
    },
    "filesGlob": ["./**/*.ts"],
    "exclude": [],
    "include": ["./src/**/*", "@types/**/*"]
}
